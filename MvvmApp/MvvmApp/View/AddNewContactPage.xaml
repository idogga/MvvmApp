<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmApp.AddNewContactPage"
             Title="{Binding User.Name}">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding User.Name}" Placeholder="Имя" />
            <Entry Text="{Binding User.Surname}" Placeholder="Фамилия" />
            <Slider Value="{Binding User.Age}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>