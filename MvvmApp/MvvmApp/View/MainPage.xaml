<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmApp.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Rotation"
                    Style="{DynamicResource BaseButton}"
                    Clicked="OnRotationClicked"/>
            <Button Text="Text"
                    Style="{DynamicResource BaseButton}"
                    Clicked="OnTextClicked"/>
            <Button Text="Realm"
                    Style="{DynamicResource BaseButton}"
                    Clicked="OnRealmClicked"/>
            <Button Text="Realm MVVM"
                    Style="{DynamicResource BaseButton}"
                    Clicked="OnRealmMVVMClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>